{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "noImplicitAny": false,
        "rootDir": "./src",
        "outDir": "./lib",
        "sourceMap": true,
        "experimentalDecorators": true,
        "declaration": true
    },
    "exclude": [
        "node_modules",
        "lib",
        "data",
        "dialogs",
        "dist",
        "docs",
        "speechAssets",
        "webapp-thing"
    ],
    "compileOnSave": false
}
